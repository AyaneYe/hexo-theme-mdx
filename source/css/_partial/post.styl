div.postPage{
	margin-top -13.5vh
	div.postMeta {
		margin 1.5rem 0
		width: 100%;
		height: 2.5rem;
		display: flex;
		justify-content: center;
		align-items: center;
		div.mdui-chip {
			margin: 0 1rem;
			span.mdui-chip-title{
				a{
					color #000
					text-decoration none
				}
			}
		}
	}
	div.mdui-card-content.mdui-typo{
		p img{
			max-height 75vh
			width 100%
			object-fit contain
			object-position center
		}
		@import "highlight"
	}
	div.pageEnd{
		background-color: #ededed;
		padding 25px 10px
		div.postTags{
			color rgba(0,0,0,.5)
			i.mdui-icon{
				font-size 18px
			}
			a.tag-none-link {
				text-decoration none
				color rgba(0,0,0,.5)
				transition opacity .05s ease
				&:before{
					content " #"
				}
				&:last-child {
					margin-right 0;
				}
				&:hover{
					opacity .7
				}
			}
		}
		div.nav{
			margin-top 1rem
			height 2.5rem
			display flex
			justify-content space-between
			align-items center
			a{
				color rgba(0,0,0,.5)
				display flex
				justify-content center
				align-items center
				text-decoration none
				transition opacity .05s ease
				&:first-child{
					margin-right 1.5rem
				}
				&:last-child{
					margin-left 1.5rem
				}
				&:hover{
					opacity .7
				}
			}
		}
	}
}