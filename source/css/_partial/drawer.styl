div#left-drawer{
	width 280px
	&.mdui-drawer-close{
		transform: translateX(-280px);
	}
	div.drawerHeader{
		div.drawerAbout{
			height 225px
			width 100%
			div.drawerAboutMain{
				height 100%
				width 100%
				--drawer-bg: url(https://picsum.photos/1280/480.webp?random=1)
				display flex
				flex-direction column
				justify-content flex-end
				align-items flex-start
				line-height 1.5rem
				background-position center
				background-repeat no-repeat
				background-size cover
				img.avatar{
					width 50px
					height 50px
					border-radius 999px
					margin 10px 20px
					order 0
				}
				&:before{
					content attr(data-name)
					font-size 18px
					margin 0 20px
					order 1
				}
				&:after{
					content attr(data-slogan)
					color #ffffffb3
					font-size 14px
					margin 0 0 20px 20px
					order 2
				}
			}
		}
		button.nightMode{
			position absolute
			top 5px
			right 5px
			padding 10px
			color #000
			font-size 20px
			cursor pointer
			transition .3s
		}
	}
	nav div a{
		border-top-right-radius: 999px;
		border-bottom-right-radius: 999px;
		width: 100%;
		i.mdui-icon.material-icons{
			margin 0 5px
		}
	}
}